# Kubernetes Secrets Template
# ==============================================================================
# HOW TO USE:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Replace all placeholder values with actual base64-encoded secrets
# 3. NEVER commit secrets.yaml to git (already in .gitignore)
#
# To base64 encode a value:
#   echo -n "your_secret_value" | base64
#
# To decode a base64 value:
#   echo "encoded_value" | base64 --decode
#
# IMPORTANT: These values should match your Helm chart values!
# ==============================================================================

apiVersion: v1
kind: Namespace
metadata:
  name: ml-pipeline
---
apiVersion: v1
kind: Secret
metadata:
  name: ml-pipeline-secrets
  namespace: ml-pipeline
  labels:
    app: crypto-prediction-api
    component: secrets
type: Opaque
data:
  # =============================================================================
  # Database credentials (from mlflow/values.yaml)
  # Default in Helm: mlflow123
  # echo -n "mlflow123" | base64 = bWxmbG93MTIz
  # =============================================================================
  DB_PASSWORD: <BASE64_ENCODED_DB_PASSWORD>

  # =============================================================================
  # MinIO/S3 credentials (from minio/values.yaml)
  # Default in Helm: admin / admin123
  # echo -n "admin" | base64 = YWRtaW4=
  # echo -n "admin123" | base64 = YWRtaW4xMjM=
  # =============================================================================
  MINIO_ACCESS_KEY: <BASE64_ENCODED_MINIO_ACCESS_KEY>
  MINIO_SECRET_KEY: <BASE64_ENCODED_MINIO_SECRET_KEY>

  # =============================================================================
  # Redis password (from redis/values.yaml)
  # Default in Helm: redis123
  # echo -n "redis123" | base64 = cmVkaXMxMjM=
  # =============================================================================
  REDIS_PASSWORD: <BASE64_ENCODED_REDIS_PASSWORD>

# ==============================================================================
# Quick Setup (for testing only - use proper secrets management in production):
#
# echo -n "mlflow123" | base64    # DB_PASSWORD
# echo -n "admin" | base64        # MINIO_ACCESS_KEY
# echo -n "admin123" | base64     # MINIO_SECRET_KEY
# echo -n "redis123" | base64     # REDIS_PASSWORD
#
# Then create secrets.yaml with these encoded values.
# ==============================================================================
